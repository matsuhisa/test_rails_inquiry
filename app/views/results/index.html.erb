<h1>Listing results</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Mail</th>
    <th>Tel</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @results.each do |result| %>
  <tr>
    <td><%= result.name %></td>
    <td><%= result.mail %></td>
    <td><%= result.tel %></td>
    <td><%= result.body %></td>
    <td><%= link_to 'Show', result %></td>
    <td><%= link_to 'Edit', edit_result_path(result) %></td>
    <td><%= link_to 'Destroy', result, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

